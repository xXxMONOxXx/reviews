<div class="card">
  <div class="card-header">
    <h4><%= t 'sign_up' %></h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :username, autofocus: true, class:"form-control", autocomplete: "username", placeholder: t('devise.username') %>
    <br>
  </div>

  <div class="field">
    <%= f.email_field :email, class:"form-control", autocomplete: "email", placeholder: t('email') %>
    <br>
  </div>

  <div class="field">
    <%= f.password_field :password, class:"form-control", autocomplete: "new-password", placeholder: t('password') %>
      <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t 'characters_minimum' %>)</em>
    <% end %><br />
    <br>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", placeholder: t('password_confirmation') %>
  </div>

  <div class="actions">
    <br>
    <%= f.submit t('sign_up'), class:"btn btn-dark" %>
  </div>
<% end %>
  </div>
</div>

<br>

<%= render "devise/shared/links" %>