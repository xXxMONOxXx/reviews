<h1>Users</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td>
          <% if user.admin %>
            ADMIN
          <% else %>
            USER
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>  

