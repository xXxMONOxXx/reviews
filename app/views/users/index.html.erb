<h1><%= t 'users' %></h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t 'devise.username' %></th>
      <th><%= t 'role' %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td>
          <% if user.admin %>
            <%=  t 'admin' %>
          <% else %>
            <%= t 'user' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>  

