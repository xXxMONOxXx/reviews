<h1> <%= @user.username %> </h1>

<p>
<strong>Role:</strong>

<% if @user.admin %>
    ADMIN
    <%= link_to_unless @user.admin.eql?(false), "Dismiss from admin", change_role_user_path(@user, admin:false), method: :patch, class:"btn btn-danger" %>
  <% else %>
    USER
     <%= link_to_unless @user.admin.eql?(true), "Promote to admin", change_role_user_path(@user, admin:true), method: :patch, class:"btn btn-primary" %>
  <% end %>
 
  
</p>
</br>

<%= @user.email %>

</br>

</br>

<h2>Reviews</h2>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
      <th>Rating</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
    <% if @user.id == review.user_id %>
      <tr>
        <td><%= link_to review.title, review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Review', new_review_path, class:"btn btn-primary" %>