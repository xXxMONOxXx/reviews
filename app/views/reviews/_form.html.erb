<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :rating %><br>
    <%= form.number_field :rating %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

<fieldset class="rating">
    <input type="radio" id="star" name="rating" value="5" />
    <label for="star5">5 stars</label>
    <input type="radio" id="star" name="rating" value="4" />
    <label for="star4">4 stars</label>
    <input type="radio" id="star" name="rating" value="3" />
    <label for="star3">3 stars</label>
    <input type="radio" id="star" name="rating" value="2" />
    <label for="star2">2 stars</label>
    <input type="radio" id="star" name="rating" value="1" />
    <label for="star">1 star</label>
</fieldset>
  <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :review_user_id, class:"form-control" , value:current_user.id, type:"hidden" %>
  </div>

<% end %>
