<h3><%= t('search_results') %></h3>

<% if @results.blank? %>
	<%= t('no_results') %>
<% else %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t 'title' %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    	<% @results.each do |result| %>
      <tr>
          <td><%= link_to result.title, result %></td>
          <td><%= link_to t('edit'), edit_review_path(result) %></td>
          <td><%= link_to t('delete'), result, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<% end %>
